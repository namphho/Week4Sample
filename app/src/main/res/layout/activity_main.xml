<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="FRAGMENT"
        app:layout_constraintEnd_toEndOf="@+id/btn_activity"
        app:layout_constraintStart_toStartOf="@+id/btn_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity" />

    <Button
        android:id="@+id/btn_dialog_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dialog Fragment"
        app:layout_constraintEnd_toEndOf="@+id/btn_fragment"
        app:layout_constraintStart_toStartOf="@+id/btn_fragment"
        app:layout_constraintTop_toBottomOf="@+id/btn_fragment" />

    <Button
        android:id="@+id/btn_parcel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Parcel"
        app:layout_constraintEnd_toEndOf="@+id/btn_dialog_fragment"
        app:layout_constraintStart_toStartOf="@+id/btn_dialog_fragment"
        app:layout_constraintTop_toBottomOf="@+id/btn_dialog_fragment" />
</androidx.constraintlayout.widget.ConstraintLayout>